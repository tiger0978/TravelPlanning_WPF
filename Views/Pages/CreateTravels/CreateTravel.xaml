<Page x:Class="TravelPlanning.Views.Pages.CreateTravel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelPlanning.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateTravel">

    <Page.Resources>
        <!-- 現代化輸入框樣式 -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#5A5AFF"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#7A7AFF"/>
                    <Setter Property="Background" Value="#252525"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 標籤樣式 -->
        <Style x:Key="ModernLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- 按鈕動畫效果 -->
        <Style x:Key="AnimatedButton" TargetType="ui:Button">
            <Setter Property="Background" Value="#5A5AFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                          To="#7A7AFF" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                           To="1.05" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                           To="1.05" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                          To="#5A5AFF" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                           To="1.0" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                           To="1.0" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- 卡片容器樣式 -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4A4A4A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 主要內容區 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24,20,24,24">

                <!-- 頁面標題 -->
                <TextBlock Text="✈️ 新建旅遊規劃" 
                          FontSize="22" 
                          FontWeight="Bold" 
                          Foreground="White"
                          Margin="0,0,0,8"/>
                <TextBlock Text="填寫您的旅遊資訊，開始精彩冒險" 
                          FontSize="13" 
                          Foreground="#808080"
                          Margin="0,0,0,24"/>

                <!-- 標題輸入 -->
                <Border Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <Label Content="📝 旅遊標題" Style="{StaticResource ModernLabel}"/>
                        <TextBox Text="{Binding Title}" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                </Border>

                <!-- 敘述輸入 -->
                <Border Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <Label Content="📝 旅遊計畫描述" Style="{StaticResource ModernLabel}"/>
                        <TextBox Text="{Binding Description}" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                </Border>

                <!-- 天數與日期 -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 天數 -->
                    <Border Grid.Column="0" Style="{StaticResource CardBorder}" Margin="0">
                        <StackPanel>
                            <Label Content="📅 天數" Style="{StaticResource ModernLabel}"/>
                            <TextBox Text="{Binding Days}" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Border>

                    <!-- 開始日期 -->
                    <Border Grid.Column="2" Style="{StaticResource CardBorder}" Margin="0">
                        <StackPanel>
                            <Label Content="🗓️ 開始日期" Style="{StaticResource ModernLabel}"/>
                            <ui:CalendarDatePicker Content="{Binding StartedDate}" 
                                                  Background="#1A1A1A"
                                                  BorderBrush="#3A3A3A"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- 封面圖片 -->
                <Border Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <Label Content="🖼️ 封面圖片" Style="{StaticResource ModernLabel}"/>
                        <Border Background="#1A1A1A" 
                               BorderBrush="#3A3A3A" 
                               BorderThickness="1" 
                               CornerRadius="6"
                               Height="180"
                               Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#5A5AFF" 
                                                BlurRadius="0" 
                                                ShadowDepth="0" 
                                                Opacity="0"/>
                            </Border.Effect>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#5A5AFF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Image Source="{Binding Cover}" 
                                      Stretch="Uniform" 
                                      Margin="8"/>
                            </Grid>
                        </Border>
                        <TextBlock Text="點擊選擇圖片" 
                                  FontSize="11" 
                                  Foreground="#606060" 
                                  HorizontalAlignment="Center"
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- 建立按鈕 -->
                <ui:Button Content="🚀 建立旅遊計畫" 
                          Width="180" 
                          Height="42"
                          HorizontalAlignment="Center"
                          Style="{StaticResource AnimatedButton}"
                          Margin="0,8,0,0"
                          Command="{Binding CreateTravelCommand}" CommandParameter="{Binding}" >
                    <ui:Button.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1" CenterX="90" CenterY="21"/>
                    </ui:Button.RenderTransform>
                </ui:Button>

            </StackPanel>
        </ScrollViewer>

        <!-- 背景裝飾效果 -->
        <Ellipse Width="300" Height="300" 
                Fill="#5A5AFF" 
                Opacity="0.03"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Margin="0,-150,-150,0"
                Grid.RowSpan="2"
                IsHitTestVisible="False"/>

        <Ellipse Width="250" Height="250" 
                Fill="#FF5A5A" 
                Opacity="0.02"
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom"
                Margin="-100,0,0,-100"
                Grid.RowSpan="2"
                IsHitTestVisible="False"/>
    </Grid>
</Page>
